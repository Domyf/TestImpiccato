<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="@dimen/dialog_padding">

    <com.hdevteam.impiccato.UI.HDTMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/dialog_title_text_size"
        android:layout_weight="0.75"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/title"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal" />

    <com.hdevteam.impiccato.UI.HDTMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/dialog_message_text_size"
        android:layout_weight="0.75"
        android:id="@+id/message"
        android:layout_below="@+id/line_title_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dialog_message_layout_margin_bottom"
        android:layout_marginTop="@dimen/dialog_message_layout_margin_top"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:id="@+id/line_title_bottom"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dialog_title_layout_margin_bottom"
        android:layout_marginRight="@dimen/dialog_line_title_bottom_layout_margin_right_left"
        android:layout_marginLeft="@dimen/dialog_line_title_bottom_layout_margin_right_left"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:id="@+id/line_title_top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/dialog_line_title_top_bottom_layout_margin_right_left"
        android:layout_marginLeft="@dimen/dialog_line_title_top_bottom_layout_margin_right_left"></LinearLayout>

    <LinearLayout
        android:background="@drawable/line"
        android:id="@+id/line_title_left"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/line_title_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/dialog_line_layout_width"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/line"
        android:id="@+id/line_title_right"
        android:layout_alignBottom="@+id/line_title_bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/dialog_line_layout_width"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/line"
        android:id="@+id/line_right"
        android:layout_above="@id/line_bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/dialog_line_layout_width"
        android:layout_alignBottom="@+id/buttonsLayout"
        android:layout_alignLeft="@+id/line_title_right"
        android:layout_alignStart="@+id/line_title_right"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/line"
        android:id="@+id/line_left"
        android:layout_width="@dimen/dialog_line_layout_width"
        android:layout_above="@id/line_bottom"
        android:layout_alignBottom="@+id/buttonsLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttons">

        <com.hdevteam.impiccato.UI.HDTMButton
            android:textSize="@dimen/dialog_message_text_size"
            android:id="@+id/negativeBtn"
            android:background="@drawable/button_state"
            android:layout_below="@+id/message"
            android:layout_toLeftOf="@+id/positiveBtn"
            android:layout_toStartOf="@+id/positiveBtn"
            android:layout_marginBottom="@dimen/dialog_button_layout_margin_bottom"
            android:layout_width="@dimen/dialog_button_layout_width"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dialog_button_layout_margin_left_right" />

        <com.hdevteam.impiccato.UI.HDTMButton
            android:textSize="@dimen/dialog_message_text_size"
            android:id="@+id/neutralBtn"
            android:background="@drawable/button_state"
            android:layout_below="@+id/message"
            android:layout_toLeftOf="@+id/positiveBtn"
            android:layout_toStartOf="@+id/positiveBtn"
            android:layout_marginBottom="@dimen/dialog_button_layout_margin_bottom"
            android:layout_width="@dimen/dialog_button_layout_width"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:layout_weight="1" />

        <com.hdevteam.impiccato.UI.HDTMButton
            android:textSize="@dimen/dialog_message_text_size"
            android:id="@+id/positiveBtn"
            android:background="@drawable/button_state"
            android:layout_below="@+id/message"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dialog_button_layout_margin_bottom"
            android:elevation="1dp"
            android:layout_width="@dimen/dialog_button_layout_width"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dialog_button_layout_margin_left_right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:id="@+id/line_bottom"
        android:layout_below="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dialog_line_title_top_bottom_layout_margin_right_left"
        android:layout_marginRight="@dimen/dialog_line_title_top_bottom_layout_margin_right_left"></LinearLayout>

</RelativeLayout>