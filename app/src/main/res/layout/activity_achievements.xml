<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_achievements"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hdevteam.impiccato.AchievementsActivity"
    android:background="@color/achievementsBackground">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/upperBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/achievementsTitleBackground"
        android:layout_height="60dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:id="@+id/listViewAchievements"
        android:layout_below="@+id/upperBackground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.hdevteam.impiccato.UI.HDTMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textAllCaps="true"
        android:text="Obiettivi"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/listViewAchievements"
        android:gravity="left|center_vertical"
        android:layout_toRightOf="@+id/achImg"
        android:layout_toEndOf="@+id/achImg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconachievements"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/achImg"
        android:layout_above="@+id/listViewAchievements"
        android:padding="10dp" />

</RelativeLayout>
